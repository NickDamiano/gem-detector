<div class= 'gem_container'>
	<% gemlist.each do |gem_name| %>
	<div class='gem_info'>
		<div class='gem_name'> <strong>Name:</strong> <%= gem_name['name'].capitalize %>
		</div>
		<div class='summary'>
			<strong>Summary:</strong> <%= gem_name['info'] %>
		</div>
	</div>
	<% end %>
	<h3 class='commented_title'>Commented Gems</h3>
	<% commented_gems.each do |gem_name| %>
	<div class='gem_info commented_gem'>
		<div class='commented_gem_name'> 
			<strong>Name:</strong> <%= gem_name['name'].capitalize %>
		</div>
		<div class='summary'>
			<strong>Summary:</strong> <%= gem_name['info'] %>
		</div>
	</div>
	<% end %>
</div>